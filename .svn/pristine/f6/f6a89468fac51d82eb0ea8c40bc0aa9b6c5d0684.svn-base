require_once "../tools/generic_includes.php";
require_once "Database.class.inc";
$CommentID = $argv[1];
$db        =& Database::singleton();
if (Utility::isErrorX($db)) {
        print "Could not connect to database: " . $db->getMessage();
            exit(1);
}
$query         = "SELECT * from bdiii WHERE CommentID = :CommentID";
$WhereCriteria = array('CommentID'=>$CommentID);
$record        = array();
$record        = $db->pselectRow($query, $WhereCriteria);
if (Utility::isErrorX($record)) {
        print "Query has failed to select: ".$record->getMessage();
            exit(2);
}
$scores = array();
//$total_smell = '';
   
$total = 
$record['i01']
+$record['i02']
+$record['i03']
+$record['i04']
+$record['i05']
+$record['i06']
+$record['i07']
+$record['i08']
+$record['i09']
+$record['i10']
+$record['i11']
+$record['i12']
+$record['i13']
+$record['i14']
+$record['i15']
+$record['i16']
+$record['i17']
+$record['i18']
+$record['i19']
+$record['i20']
+$record['i21'];

//$s=array($record['i01'], $record['i02'],$record['i03']);
//$s['i01']= $record['i01'];  //,record['i02'],record['i03']);
$s = array(
$record['i01'],
$record['i02'],
$record['i03'],
$record['i04'],
$record['i05'],
$record['i06'],
$record['i07'],
$record['i08'],
$record['i09'],
$record['i10'],
$record['i11'],
$record['i12'],
$record['i13'],
$record['i14'],
$record['i15'],
$record['i16'],
$record['i17'],
$record['i18'],
$record['i19'],
$record['i20'],
$record['i21'] );

if(empty($total)) {
    //$scores['total']          = 'Unable to calculate';
	$scores['total'] = 0;

} else {
    $scores['total']          = round($total, 2);

}


if ((array_search('', $s)!==false) or (array_search('na', array_map('strtolower',$s))!==false)) {
	if (strpos($record['notes'], " AUTOMATED MESSAGE: some field(s) not entered") === FALSE) {
		$scores['notes'] = $record['notes'] . " AUTOMATED MESSAGE: some field(s) not entered";	
	} 

	$scores['total'] = NULL;
	$scores['warnings'] = "Warning:  Blank entries found!";
} else {
	print_r($scores['notes']);
	print_r('..');

	$scores['notes'] = str_replace("AUTOMATED MESSAGE: some field(s) not entered"," ",$record['notes']);
	$scores['warnings'] = NULL;
}




//save scores
$result = $db->update('bdiii', $scores, $WhereCriteria);
if ($db->isError($result)) {
    print "Could not save total score: ". $result->getMessage();
    exit(3);
}
print "Could not save total score: ";
exit(0);

